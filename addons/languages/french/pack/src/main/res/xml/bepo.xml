    <!-- Bottom row URL mode -->
    <Row android:keyboardMode="@integer/keyboard_mode_url" android:rowEdgeFlags="bottom">
        <Key android:codes="-9" android:keyWidth="10.5%p" android:keyEdgeFlags="left" />
        <Key android:codes="64" android:horizontalGap="2%p" android:keyLabel="\@" android:popupCharacters="!/?&amp;" />
        <Key android:codes="58" android:keyLabel=":" android:popupCharacters=";" />
        <Key android:codes="32" android:horizontalGap="2.5%p" android:keyWidth="25%p" />
        <Key android:codes="46,58" android:horizontalGap="2.5%p" android:keyLabel="." android:popupCharacters=",()'-_" />
        <Key android:codes="47" android:keyLabel="/" />
        <Key android:codes="10" android:horizontalGap="2.5%p" android:keyWidth="15%p" android:keyEdgeFlags="right" ask:longPressCode="-100" />
    </Row>

    <!-- Bottom row EMAIL mode -->
    <Row android:keyboardMode="@integer/keyboard_mode_email" android:rowEdgeFlags="bottom">
        <Key android:codes="-9" android:keyWidth="10.5%p" android:keyEdgeFlags="left" />
        <Key android:codes="64" android:horizontalGap="2%p" android:keyLabel="\@" android:popupCharacters="!/?&amp;" />
        <Key android:codes="58" android:keyLabel=":" android:popupCharacters=";" />
        <Key android:codes="32" android:horizontalGap="2.5%p" android:keyWidth="25%p" />
        <Key android:codes="46,58" android:horizontalGap="2.5%p" android:keyLabel="." android:popupCharacters=",()'-_" />
        <Key android:codes="47" android:keyLabel="/" />
        <Key android:codes="10" android:horizontalGap="2.5%p" android:keyWidth="15%p" android:keyEdgeFlags="right" ask:longPressCode="-100" />
