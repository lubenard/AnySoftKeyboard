        <Key android:codes="116"     android:keyLabel="t" android:popupCharacters="" />
        <Key android:codes="115"     android:keyLabel="s" android:popupCharacters="" />
        <Key android:codes="114"     android:keyLabel="r" android:popupCharacters="®™" />
        <Key android:codes="110"     android:keyLabel="n" android:popupCharacters="" />
        <Key android:codes="109"     android:keyLabel="m" android:keyEdgeFlags="right" />
    </Row>

    <!-- Third row -->
    <Row>
        <!-- Shift key -->
        <Key android:codes="-1" android:isModifier="true" android:isSticky="true" android:keyEdgeFlags="left" />
        <Key android:codes="121"      android:keyLabel="y" android:popupCharacters=""/>
        <Key android:codes="120"      android:keyLabel="x" android:popupCharacters=""/>
        <Key android:codes="107,8230" android:keyLabel="k" android:popupCharacters=""/>
        <!-- — (em) – (en) _ -->
        <Key android:codes="45,8212"  android:keyLabel="-" android:popupCharacters="—–_" />
        <Key android:codes="113,231"  android:keyLabel="q" android:popupCharacters=""/>
        <Key android:codes="103"      android:keyLabel="g" android:popupCharacters=""/>
        <Key android:codes="104"      android:keyLabel="h" android:popupCharacters=""/>
        <Key android:codes="102"      android:keyLabel="f" android:popupCharacters=""/>
        <!-- Delete key -->
        <Key android:codes="-5" android:isRepeatable="true" android:keyEdgeFlags="right" />
    </Row>

    <!-- Generic bottom row -->
    <Row android:keyboardMode="@integer/keyboard_mode_normal" android:rowEdgeFlags="bottom">
        <Key android:codes="-10" android:keyWidth="10.5%p" android:keyEdgeFlags="left" />
        <Key android:codes="63,33" android:horizontalGap="2%p" android:keyLabel="\?" android:popupCharacters="!/@&amp;" />
        <Key android:codes="44,59" android:keyLabel="," android:popupCharacters=";()[]{}&lt;&gt;" />
        <Key android:codes="32" android:horizontalGap="2.5%p" android:keyWidth="25%p" />
        <Key android:codes="46,58" android:horizontalGap="2.5%p" android:keyLabel="." android:popupCharacters=":…-_·" />
        <Key android:codes="39,34" android:keyLabel="\'" android:popupCharacters='"«»„“' />
        <Key android:codes="10" android:horizontalGap="2.5%p" android:keyWidth="15%p" android:keyEdgeFlags="right" ask:longPressCode="-100" />
    </Row>

    <Row android:keyboardMode="@integer/keyboard_mode_im" android:rowEdgeFlags="bottom">
        <Key android:codes="-10" android:keyWidth="10.5%p" android:keyEdgeFlags="left" />
        <Key android:codes="63,33" android:horizontalGap="2%p" android:keyLabel="\?" android:popupCharacters="!/@&amp;¿¡" />
        <Key android:codes="44,59" android:keyLabel="," android:popupCharacters=";()[]{}&lt;&gt;" />
        <Key android:codes="32" android:horizontalGap="2.5%p" android:keyWidth="25%p" />
        <Key android:codes="46,58" android:horizontalGap="2.5%p" android:keyLabel="." android:popupCharacters=":…-_·" />
